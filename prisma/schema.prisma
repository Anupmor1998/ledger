generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String               @id @default(uuid())
  email               String               @unique
  name                String?
  password            String
  theme               String               @default("light")
  orderCounter        Int                  @default(0)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  customers           Customer[]
  manufacturers       Manufacturer[]
  orders              Order[]
  qualities           Quality[]
  passwordResetTokens PasswordResetToken[]
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Customer {
  id        String   @id @default(uuid())
  userId    String
  firmName  String
  name      String
  gstNo     String?
  address   String
  email     String?
  phone     String
  commissionBase    CommissionBase @default(PERCENT)
  commissionPercent Decimal        @default(1) @db.Decimal(5, 2)
  commissionLotRate Decimal?       @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Restrict)
  orders    Order[]  @relation("OrderCustomer")

  @@unique([userId, gstNo])
  @@unique([userId, phone])
  @@index([userId])
}

model Manufacturer {
  id        String   @id @default(uuid())
  userId    String
  firmName  String?
  name      String
  address   String?
  email     String?
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Restrict)
  orders    Order[]  @relation("OrderManufacturer")

  @@unique([userId, phone])
  @@index([userId])
}

model Quality {
  id     String  @id @default(uuid())
  userId String
  name   String
  user   User    @relation(fields: [userId], references: [id], onDelete: Restrict)
  orders Order[]

  @@unique([userId, name])
  @@index([userId])
}

model Order {
  id             String       @id @default(uuid())
  userId         String
  customerId     String
  manufacturerId String
  qualityId      String
  status         OrderStatus  @default(PENDING)
  rate           Decimal      @db.Decimal(12, 2)
  quantity       Int
  processedQuantity Int       @default(0)
  quantityUnit   QuantityUnit @default(TAKKA)
  lotMeters      Decimal?     @db.Decimal(12, 2)
  meter          Decimal?     @db.Decimal(12, 2)
  commissionAmount Decimal?   @db.Decimal(12, 2)
  remarks        String?
  paymentDueOn   Int?
  orderNo        Int
  orderDate      DateTime
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  user           User         @relation(fields: [userId], references: [id], onDelete: Restrict)
  customer       Customer     @relation("OrderCustomer", fields: [customerId], references: [id], onDelete: Restrict)
  manufacturer   Manufacturer @relation("OrderManufacturer", fields: [manufacturerId], references: [id], onDelete: Restrict)
  quality        Quality      @relation(fields: [qualityId], references: [id], onDelete: Restrict)

  @@index([userId])
  @@index([customerId])
  @@index([manufacturerId])
  @@index([qualityId])
  @@unique([userId, orderNo])
}

enum QuantityUnit {
  TAKKA
  LOT
  METER
}

enum CommissionBase {
  PERCENT
  LOT
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}
